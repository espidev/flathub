{
    "id": "org.kde.kweather",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kweather",
    "rename-icon": "kweather",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],

    "modules": [
        {
            "name": "kweathercore",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/kweathercore/0.3/kweathercore-0.3.tar.xz", 
                    "sha256": "bb36ff6c677be15062c3b2bfa7ef1b93746c77dcfa2cd469fd504e97a372218c" 
                } 
            ]
        },
        {
            "name": "kquickcharts",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=Release" ],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/frameworks/5.82/kquickcharts-5.82.0.tar.xz", 
                    "sha256": "86c6cde106c786fe3908e67847f2cbbb0324b96f5589c1a10ed67654660ec7fb"
                } 
            ]
        },
        {
            "name": "kweather",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/plasma-mobile/21.06/kweather-21.06.tar.xz", 
                    "sha256": "d6bdf4fbe6fa1ed5c26a0c986c5799ae854eb719824d755f6d2b97a99f5a4049" 
                },
                {
                    "type": "patch",
                    "path": "0001-force-breeze-icon-theme.patch"
                }
            ]
        }
    ]
}
