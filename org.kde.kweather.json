{
    "id": "org.kde.kweather",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kweather",
    "rename-icon": "kweather",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],

    "modules": [
        {
            "name": "kweathercore",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/kweathercore/0.4/kweathercore-0.4.tar.xz", 
                    "sha256": "47aa124c045d159572d2a8a589f8fc77ee7aedcf7a0c7256a5e3f6f42bb9b195" 
                } 
            ]
        },
        {
            "name": "kquickcharts",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=Release" ],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/frameworks/5.82/kquickcharts-5.82.0.tar.xz", 
                    "sha256": "86c6cde106c786fe3908e67847f2cbbb0324b96f5589c1a10ed67654660ec7fb"
                } 
            ]
        },
        {
            "name": "kweather",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/plasma-mobile/21.07/kweather-21.07.tar.xz", 
                    "sha256": "5429d7d954abe99a5ec652ff9597ac05294112ef23c9d6a66900ed25b8e84e24" 
                },
                {
                    "type": "patch",
                    "path": "0001-force-breeze-icon-theme.patch"
                }
            ]
        }
    ]
}
