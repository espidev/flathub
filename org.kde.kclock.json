{
    "id": "org.kde.kclock",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kclock",
    "rename-icon": "kclock",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-data/sounds",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.Solid.PowerManagement",
        "--own-name=org.kde.kclockd"
    ],

    "modules": [
        {
            "name": "kirigamiaddons",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/unstable/kirigami-addons/0.2/kirigami-addons-0.2.tar.xz",
                    "sha256": "f8be68831c3261cfd2ffd84b61530cdf84c9cc5f26101d0c48e185b7f0017092"
                } 
            ]
        },
        {
            "name": "kclock",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=Release" ],
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/plasma-mobile/21.05/kclock-21.05.tar.xz", 
                    "sha256": "ad62ee0cdbe1c7d65919ac0fdc36f8a33a3b594df0339c3da20079d0d586455d" 
                },
                {
                    "type": "patch",
                    "path": "patches/appdata-fix.patch"
                },
                {
                    "type": "patch",
                    "path": "patches/flatpak-fix.patch"
                }
            ]
        }
    ]
}
