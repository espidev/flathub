{
    "id": "org.kde.kweather",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kweather",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],

    "modules": [
        {
            "name": "kweathercore",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kweathercore.git", "tag": "v21.05", "commit": "97dc22c6d1bc32f1e946c420dd0c102f065e46ed" } ]
        },
        {
            "name": "kquickcharts",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "sources": [ { "type": "git", "url": "https://invent.kde.org/frameworks/kquickcharts.git", "tag": "v5.81.0", "commit": "2f868bf91bca9ff778920e81ffaa43c7c53ad5d2" } ]
        },
        {
            "name": "kweather",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "sources": [ { "type": "git", "url": "https://invent.kde.org/plasma-mobile/kweather.git", "commit": "d730029f99ad1b67fa75f0baadbc161b1a82ade6" } ]
        }
    ]
}
